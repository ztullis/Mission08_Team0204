        <div class="col-2">
                <h2 style="writing-mode:vertical-lr; transform: rotate(180deg)">Important</h2>
        </div>
        <div class="col-5 grid-item">
            <h4>Quadrant 1</h4>
                @foreach (var item in Model)
                {
                    @if (item.Quadrant == 1)
                    {
                        <div class="row">
                            <div class="col-6">
                                <p>@item.TaskStr</p>
                            </div>
                            <div class="col-3">
                                <a class="btn btn-primary" asp-controller="Home" asp-action="Edit" asp-route-id="@item.TaskId">Edit</a>
                            </div>
                            <div class="col-3">
                                <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@item.TaskId">Delete</a>
                            </div>
                        </div>
                    }
                }
        </div>
