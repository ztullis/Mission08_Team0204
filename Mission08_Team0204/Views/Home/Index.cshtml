@model List<Mission08_Team0204.Models.Task>
<div class="container">
    <h1 class="text-center">Stephen Covey's Time Management Matrix</h1>
    <div>
        <br />
        <br />
    </div>
    <table class="table table-bordered table-striped">
    <div class="row">
    <div class="col-2"> 
         
    </div>
    <div class="col-5">
                <h2>Urgent</h2>
    </div>
    <div class="col-5">
                <h2>Not Urgent</h2>
    </div>
    </div>
        <div>
            <br />
            <br />
        </div>
